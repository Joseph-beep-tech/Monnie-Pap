{{#partial "title"}}
    <h1>Registration Form</h1>
{{/partial}}
{{#partial "content"}}
       <body style="background-image: url('images/Main.jpg'); background-size:cover; background-repeat:no-repeat;">
    <form action="/apply"   method="post" style="">

        <div class="form-group">
            <label for="name">Name :{{name}}</label>
            <input id="name" name="name" class="form-control" type="text" required>
        </div>

        <div class="form-group">
            <label for="age">Age :{{age}}</label>
            <input id="age" name="age" class="form-control" type="number" required>
        </div>

        <div class="form-group">
            <label for="occupation">Select Your Job Occupation{{occupation}}</label>
            <select id="occupation" name="occupation" type="text" class="form-control">
                <option value=""></option>
                <option value="Employed">Employed</option>
                <option value="Self-employed">Self-employed</option>
                <option value="Un-employed">Un-employed</option>
            </select>
        </div>

        <div class="form-group">
            <label for="totalIncome">Your monthly total income:{{totalIncome}}</label>
            <input id="totalIncome" name="totalIncome" class="form-control" type="number" required>
        </div>


        <div class="form-group">
            <label for="loanPurpose">Purpose For Loan Application:{{loanPurpose}}</label>
            <input id="loanPurpose" name="loanPurpose" class="form-control" type="text" required>
        </div>

        <div class="form-group">
            <label for="loanAmount">Amount Of Loan To Be Given:{{loanAmount}}</label>
            <input id="loanAmount" name="loanAmount" class="form-control" type="number" required>
        </div>

        <button class="btn btn-success" href="/success" type="submit"> Apply Now</button>
    </form>
    </body>
{{/partial}}
{{> layout.hbs}}